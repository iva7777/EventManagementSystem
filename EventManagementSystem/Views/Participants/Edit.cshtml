@model EventManagementSystem.Models.ViewModels.ParticipantViewModel

@{
    ViewData["Title"] = "Edit Participant";
}

<h2>Edit Participant</h2>

<form asp-action="Edit" method="post" class="needs-validation" novalidate>

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Participant Name</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" type="email" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Role" class="form-label">Role</label>
        <input asp-for="Role" class="form-control" required />
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EventId" class="form-label">Event</label>
        <select asp-for="EventId" class="form-select" asp-items="ViewBag.Events" required>
            <option value="">Select an event</option>
        </select>
        <span asp-validation-for="EventId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
