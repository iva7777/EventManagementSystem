@model EventManagementSystem.Models.ViewModels.ParticipantViewModel

@{
    ViewData["Title"] = "Delete Participant";
}

<h2>Delete Participant</h2>
<p>Are you sure you want to delete this participant?</p>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Name: @Model.Name</h5>
        <p class="card-text"><strong>Email:</strong> @Model.Email</p>
        <p class="card-text"><strong>Role:</strong> @Model.Role</p>
        <p class="card-text"><strong>Event:</strong> @Model.EventId</p>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
